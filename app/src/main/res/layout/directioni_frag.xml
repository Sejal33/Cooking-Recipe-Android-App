<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/frg2Color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/i1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="  1.  Cook pasta according to package directions. Meanwhile, in a large bowl, combine 3/4 cup spaghetti sauce, cottage cheese, 1 cup mozzarella cheese, egg, parsley, oregano, garlic powder and pepper. Drain pasta; stir into cheese mixture."
                android:textSize="17sp" />

            <TextView
                android:id="@+id/i3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="  2.  In a greased 8-in. square baking dish, spread 1/4 cup spaghetti sauce. Top with pasta mixture, and remaining sauce and mozzarella cheese."
                android:textSize="17sp" />

            <TextView
                android:id="@+id/i4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="  3.  Cover and bake at 375° for 45 minutes. Uncover; bake until a thermometer reads 160°, 5-10 minutes longer."
                android:textSize="17sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>