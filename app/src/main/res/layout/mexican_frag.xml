<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/frg1Color">


    <ScrollView
        android:id="@+id/r1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="195dp"
                android:layout_weight="1"
                android:background="#fff"
                app:cardCornerRadius="6dp"
                app:cardMaxElevation="10dp"
                android:onClick="Brecipe">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="400dp"
                    android:layout_height="61dp"
                    android:layout_marginTop="130dp"
                    android:layout_marginBottom="105dp"

                    android:text="Burritos are almost synonymous with Mexican cuisine.
                    Yummy tortillas packed with rice, re-fried beans, salsa, sour cream and cheese, this dish has everything packed into it. " />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:layout_gravity="fill_horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="124dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/burritos2" />

                </RelativeLayout>
                <!--Title & Description Text-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:orientation="vertical">
                    <!--Title Text-->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/transparent_card">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="121dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:text="BURRITOS"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="24sp" />
                    </FrameLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="195dp"
                android:layout_weight="1"
                android:background="#fff"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="6dp"
                app:cardMaxElevation="10dp"
                android:onClick="Qrecipe">
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="400dp"
                    android:layout_height="61dp"
                    android:layout_marginTop="130dp"
                    android:layout_marginBottom="105dp"
                    android:text="This easy veggie quesadillas recipe is 100% customizable with whatever veggies you happen to have on hand. Itâ€™s also on the healthier side, quick and easy to make, and SO delicious!" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:layout_gravity="fill_horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="124dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/quesadillas" />
                </RelativeLayout>
                <!--Title & Description Text-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:orientation="vertical">
                    <!--Title Text-->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/transparent_card">

                        <TextView
                            android:id="@+id/title2"
                            android:layout_width="166dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:text="QUESADILLAS"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="24sp" />
                    </FrameLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="195dp"
                android:layout_weight="1"
                android:background="#fff"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="6dp"
                app:cardMaxElevation="10dp"
                android:onClick="Crecipe">
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="400dp"
                    android:layout_height="61dp"
                    android:layout_marginTop="130dp"
                    android:layout_marginBottom="105dp"
                    android:text="Oven baked burritos stuffed with flavourful mixed vegetables and served along with spicy mexican salsa. This traditional mexican dish is popular among Tex-Mex cuisine." />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:layout_gravity="fill_horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="124dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/chimichangas" />
                </RelativeLayout>
                <!--Title & Description Text-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:orientation="vertical">
                    <!--Title Text-->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/transparent_card">

                        <TextView
                            android:id="@+id/title4"
                            android:layout_width="189dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:text="CHIMICHANGAS"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="24sp" />
                    </FrameLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="210dp"
                android:layout_weight="1"
                android:background="#fff"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="6dp"
                app:cardMaxElevation="10dp"
                android:onClick="Mrecipe">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:layout_marginTop="130dp"
                    android:layout_marginBottom="105dp"
                    android:text="Your Mexican meal may not seem complete without Mexican (or Spanish) rice. It's a standard side dish at Tex-Mex and Mexican restaurants in the United States, and incredibly easy to make at home." />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:layout_gravity="fill_horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="124dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/mexicanrice" />
                </RelativeLayout>
                <!--Title & Description Text-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:orientation="vertical">
                    <!--Title Text-->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/transparent_card">

                        <TextView
                            android:id="@+id/title5"
                            android:layout_width="189dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:text="MEXICAN RICE"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="24sp" />
                    </FrameLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>